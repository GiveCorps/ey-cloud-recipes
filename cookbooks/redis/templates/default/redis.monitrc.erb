check process redis-<%= @profile %>
with pidfile <%= @pidfile %>
  # for V2 environment
  # start program = "/usr/bin/redis-server <%= @configfile %>"
  # for V4 environment
  start program = "/usr/sbin/redis-server <%= @configfile %>"
  stop program = "/usr/bin/redis-cli -p <%= @port %> shutdown"
  group redis-util
